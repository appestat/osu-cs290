extends layout
	
block content

	link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
	nav.navbar.navbar-default
		.container-fluid
			.navbar-header
				a.navbar-brand(href='#') Scoreboard
			ul.nav.navbar-nav
				li
					a(href='/') Home
				li
					a(href='/boards') Board List

	form#aform(method="POST", action="/boards/" + id + "/addmatch")
		input(type='text', name='info', value='')
		input(type='hidden',name='longitude',value='43.0')
		input(type='hidden',name='latitude',value='43.0')
		input(type='submit', value="Add match")
	select(name="winner", form="aform")
		each user in users
			option(value=user.user_id) #{user.name}
	select(name="loser", form="aform")
		each user in users
			option(value=user.user_id) #{user.name}
	script.
							function geoFindMe() {
					      var output = document.getElementById("out");
					    
					      if (!navigator.geolocation){
					        output.innerHTML = "<p>Geolocation is not supported by your browser</p>";
					        return;
					      }
					    
					      function success(position) {
					        var latitude  = position.coords.latitude;
					        var longitude = position.coords.longitude;
					    
					        //output.innerHTML = '<p>Latitude is ' + latitude + '° <br>Longitude is ' + longitude + '°</p>';
					    
					        var img = new Image();
					        img.src = "https://maps.googleapis.com/maps/api/staticmap?center=" + latitude + "," + longitude + "&zoom=13&size=300x300&sensor=false";
					    
					        output.appendChild(img);
					      }
					    
					      function error() {
					        output.innerHTML = "Unable to retrieve your location";
					      }
					    
					      output.innerHTML = "<p>Locating…</p>";
					    
					      navigator.geolocation.getCurrentPosition(success, error);
					    }
