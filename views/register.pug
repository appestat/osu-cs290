extends layout

block content
	link(rel='stylesheet', href='/stylesheets/login.css')
	.container
		a(href='/register') Create Acount
		h1 Scoreboard Login
		form#join-us(method='POST', action='../login')
			.fields
				span
					input(name='displayname', placeholder='Display Name', type='text')
				br
				span
					input(name='username', placeholder='Name', type='text')
				br
				span
					input(name='password', placeholder='Password', type='password')
				br
				span
					input(name='passwordMatch', placeholder='Retype Password', type='password')
			.submit
				input.submit(value='Submit', type='button')