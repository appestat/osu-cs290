extends layout

block content
	link(rel='stylesheet', href='/stylesheets/login.css')
	.container
		h2 It's now or never
		h1 Come on , Join us!
		form#join-us(method='POST', action='../login')
			.fields
				span
					input(placeholder='Name', type='text')
				br
				span
					input(placeholder='Password', type='password')
			.submit
				input.submit(value='Submit', type='button')